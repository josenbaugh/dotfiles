#!/bin/sh

# do click stuff
case $BLOCK_BUTTON in
	#left click
	1) pavucontrol ;;
	#middle click
	2) amixer -q set Master toggle ;;
	#right click
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	#scroll up
	4) amixer -q set Master 2%+ unmute ;; 
	#scroll down
	5) amixer -q set Master 2%- unmute ;; 
	#shift left click
	6) setsid "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pacmd list-sinks | awk '/muted/ { print $2 }') == "yes" ] && echo ðŸ”‡ && exit

vol=$(amixer -D pulse get Master | awk -F 'Left:|[][]' 'BEGIN {RS=""}{ print $3 }' | sed "s/\%//g")

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

printf "%s%s%%" "$icon" "$vol"
